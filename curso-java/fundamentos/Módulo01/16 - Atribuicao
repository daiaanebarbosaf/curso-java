package fundamentos;

public class Atribuicao {

	public static void main(String[] args) {
		
		int a = 3;
		int b = a;
		int c = a + b;
		
		c += b;//é o mesmo que c = c + b;
		c -= b;//é o mesmo que c = c - b;
		c *= b;//é o mesmo que c = c * b;
		c /= b;//é o mesmo que c = c + b;
		System.out.println(c);

		c %= 2;/* c = % 2; 0 ou 1, se for zero é par
		se  for um é ímpar*/
	}

}
